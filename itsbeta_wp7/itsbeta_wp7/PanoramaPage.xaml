<phone:PhoneApplicationPage 
    x:Class="itsbeta_wp7.PanoramaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="800"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    xmlns:telerikData="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Data"
    xmlns:telerikPrimitives="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Primitives"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="False"
    DataContext="{Binding Main, Source={StaticResource Locator}}">

    <!--LayoutRoot содержит корневую сетку, где размещается все содержимое страницы-->
    <Grid x:Name="LayoutRoot">
        <controls:Panorama>
            <!--<controls:Panorama.Background>
                <ImageBrush ImageSource="images/bg.png" Stretch="None" />
            </controls:Panorama.Background>-->
            <controls:Panorama.Title>
                <Image Margin="-10,75,0,0" Source="/itsbeta_wp7;component/images/logo1.png"/>
            </controls:Panorama.Title>

            <!--Первый элемент Panorama-->
            <controls:PanoramaItem Header="Категории">
                <Grid>
                    <telerikData:RadJumpList x:Name="AllCategories" ItemsSource="{Binding Path=Categories}"
                                     DataContext="{Binding Main, Source={StaticResource Locator}}" ItemTap="AllCategories_ItemTap" GroupHeaderItemTap="AllCategories_GroupHeaderItemTap">
                        <telerikData:RadJumpList.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="10,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <!--<ColumnDefinition Width="110" />-->
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--<Image Grid.Column="0" Source="{Binding Pic}"/>-->
                                    <StackPanel Grid.Column="0" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding Display_name}" TextWrapping="Wrap" Style="{StaticResource PhoneTextTitle2Style}" />
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Activated_badges_count}"/>
                                            <TextBlock Text="/"/>
                                            <TextBlock Text="{Binding Total_badges}"/>
                                            <TextBlock Text=" бейджей открыто"/>
                                        </StackPanel>
                                        <!--<TextBlock Text="{Binding Desc}" TextWrapping="Wrap"/>-->
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </telerikData:RadJumpList.ItemTemplate>
                    </telerikData:RadJumpList>
                </Grid>
            </controls:PanoramaItem>

            <!--Второй элемент Panorama-->
            <controls:PanoramaItem Header="Профиль">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="{Binding UserProfilePicture}" DataContext="{Binding User, Source={StaticResource Locator}}"></Image>                    
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding First_name}" DataContext="{Binding User, Source={StaticResource Locator}}"/>
                            <TextBlock Text="{Binding Last_name}" DataContext="{Binding User, Source={StaticResource Locator}}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </controls:PanoramaItem>
            
            <controls:PanoramaItem Header="Последнее">
                <Grid>
                    <telerikData:RadJumpList x:Name="LastAchieves"                                     
                                     ItemsSource="{Binding Path=LastAchieves}"
                                     DataContext="{Binding Main, Source={StaticResource Locator}}" ItemTap="LastAchieves_ItemTap">
                        <telerikData:RadJumpList.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="10,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="{Binding Pic}"/>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding Display_name}" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Desc}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </telerikData:RadJumpList.ItemTemplate>
                    </telerikData:RadJumpList>
                </Grid>
            </controls:PanoramaItem>
        </controls:Panorama>
    </Grid>

    <!--Приложения на базе панорамы не должны содержать ApplicationBar-->

</phone:PhoneApplicationPage>