        					</Border>
        				</Grid>
        			</ControlTemplate>
        		</Setter.Value>
        	</Setter>
        </Style>		
		
        <Style x:Key="CategoryTextblockStyle" TargetType="TextBlock">
        	<Setter Property="Foreground" Value="#FF92918A"/>
        	<Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilySemiLight}"/>
        	<Setter Property="FontSize" Value="38"/>
        </Style>
		
		<Style x:Key="BadgesTextblockStyle" TargetType="TextBlock">
        	<Setter Property="Foreground" Value="#FF92918a"/>
        	<Setter Property="FontFamily" Value="Segoe WP"/>
        	<Setter Property="FontSize" Value="21"/>
        </Style>
		
		<Style x:Key="OtherTextblockStyle" TargetType="TextBlock">
        	<Setter Property="Foreground" Value="#FF4c4c4b"/>
        	<Setter Property="FontFamily" Value="Segoe WP"/>
        	<Setter Property="FontSize" Value="21"/>
        </Style>

        <Style x:Key="ProjectTextblockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD2D2D2"/>
            <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilyNormal}"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontStretch" Value="Normal"/>
			<!--<Setter Property="CharacterCasing" Value="Upper"/>-->
        </Style>

        <Style x:Key="ApplicationTitleTextblockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF4c4c4b"/>
            <Setter Property="FontFamily" Value="Segoe WP"/>
            <Setter Property="FontSize" Value="21"/>
        </Style>

        <DataTemplate x:Key="NoDataListTemlate">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Нет данных" Style="{StaticResource CategoryTextblockStyle}"/>
        </DataTemplate>

    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService Launching="Application_Launching"
                                       Closing="Application_Closing"
                                       Activated="Application_Activated"
                                       Deactivated="Application_Deactivated" />
    </Application.ApplicationLifetimeObjects>

</Application>
