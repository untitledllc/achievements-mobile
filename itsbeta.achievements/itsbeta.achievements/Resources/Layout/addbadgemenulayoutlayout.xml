<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:minWidth="25px"
    p1:minHeight="25px"
    p1:layout_width="wrap_content"
    p1:layout_height="wrap_content"
    p1:id="@+id/FristBadgeMainRelativeLayout">
    <RelativeLayout
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:layout_width="wrap_content"
        p1:layout_height="wrap_content"
        p1:id="@+id/FirstBadgeFrontRelativeLayout">
        <ImageView
            p1:layout_width="290dp"
            p1:layout_height="265dp"
            p1:id="@+id/BadgeSheetImageView"
            p1:layout_centerHorizontal="true"
            p1:background="@drawable/Paper_background_middleMiddle" />
        <Button
            p1:text="Отмена"
            p1:layout_width="wrap_content"
            p1:layout_height="45dp"
            p1:id="@+id/addbadge_cancelButton"
            p1:layout_alignLeft="@id/BadgeSheetImageView"
            p1:layout_alignBottom="@id/BadgeSheetImageView"
            p1:layout_alignRight="@id/BadgeSheetImageView"
            p1:background="@drawable/paper_background_middlemiddle"
            p1:textColor="#ff4e4e4e"
            p1:textSize="15dp" />
        <Button
            p1:text="    Считать QR-код"
            p1:layout_height="45dp"
            p1:id="@+id/addbadge_readQRButton"
            p1:layout_alignTop="@id/BadgeSheetImageView"
            p1:layout_alignLeft="@id/BadgeSheetImageView"
            p1:layout_alignRight="@id/BadgeSheetImageView"
            p1:textSize="15dp"
            p1:gravity="center_vertical"
            p1:background="@drawable/BlueBtn_norm"
            p1:layout_marginTop="60dp"
            p1:layout_width="wrap_content"
            p1:layout_marginLeft="15dp"
            p1:layout_marginRight="15dp"
            p1:textColor="#fff6f6f6" />
        <Button
            p1:text="    Ввести код"
            p1:layout_width="wrap_content"
            p1:layout_height="45dp"
            p1:layout_below="@id/addbadge_readQRButton"
            p1:id="@+id/addbadge_addcodeButton"
            p1:background="@drawable/GreenBtn_norm"
            p1:textSize="15dp"
            p1:layout_alignLeft="@id/BadgeSheetImageView"
            p1:layout_alignRight="@id/BadgeSheetImageView"
            p1:layout_marginTop="5dp"
            p1:layout_marginRight="15dp"
            p1:layout_marginLeft="15dp"
            p1:gravity="center_vertical"
            p1:textColor="#fff6f6f6" />
        <TextView
            p1:text="Добавить бейдж?"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:id="@+id/textView1"
            p1:layout_alignTop="@id/BadgeSheetImageView"
            p1:layout_alignLeft="@id/BadgeSheetImageView"
            p1:layout_marginLeft="15dp"
            p1:layout_marginTop="20dp"
            p1:textColor="#ff4a4a4a"
            p1:textSize="20dp"
            p1:textStyle="normal" />
        <ImageView
            p1:layout_width="wrap_content"
            p1:layout_height="4dp"
            p1:layout_above="@id/addbadge_cancelButton"
            p1:id="@+id/imageView1"
            p1:layout_alignRight="@id/addbadge_cancelButton"
            p1:layout_alignLeft="@id/addbadge_cancelButton"
            p1:background="@drawable/TableAndButtons_divider_h" />
        <TextView
            p1:text="Введите код или считайте QR-код с сертефиката достижения, чтобы получить новый значок."
            p1:layout_width="wrap_content"
            p1:layout_height="wrap_content"
            p1:layout_below="@id/addbadge_addcodeButton"
            p1:id="@+id/addbadge_hintTextView"
            p1:layout_alignLeft="@id/addbadge_addcodeButton"
            p1:layout_alignRight="@id/addbadge_addcodeButton"
            p1:layout_marginTop="10dp"
            p1:textColor="#ff6c6c6c"
            p1:textSize="12dp" />
    </RelativeLayout>
</RelativeLayout>