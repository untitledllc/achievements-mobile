<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:minWidth="25px"
    p1:minHeight="25px"
    p1:layout_width="fill_parent"
    p1:layout_height="fill_parent"
    p1:id="@+id/RelativeLayout"
    p1:background="#7d000000">
    <ScrollView
        p1:layout_width="fill_parent"
        p1:layout_height="fill_parent"
        p1:id="@+id/badgewin_scrollView"
        p1:layout_centerHorizontal="true"
        p1:layout_centerVertical="true"
        p1:fillViewport="true">
        <RelativeLayout
            p1:minWidth="25px"
            p1:minHeight="0px"
            p1:layout_width="fill_parent"
            p1:layout_height="fill_parent"
            p1:id="@+id/relativeLayout1">
            <ImageView
                p1:layout_height="400dp"
                p1:id="@+id/BadgeSheetImageView"
                p1:adjustViewBounds="true"
                p1:background="@drawable/Login_background"
                p1:layout_alignTop="@+id/badgewin_BadgeImageView"
                p1:layout_marginTop="100dp"
                p1:layout_alignBottom="@+id/bonuspaperlist_linearLayout"
                p1:layout_marginBottom="-9dp"
                p1:clickable="false"
                p1:minWidth="290dp"
                p1:maxWidth="350dp"
                p1:layout_width="400dp"
                p1:layout_marginLeft="20dp"
                p1:layout_marginRight="20dp"
                p1:maxHeight="0dp"
                p1:minHeight="0dp"
                p1:layout_centerHorizontal="true"
                p1:cropToPadding="true" />
            <TextView
                p1:textAppearance="?android:attr/textAppearanceSmall"
                p1:layout_width="wrap_content"
                p1:layout_height="100dp"
                p1:id="@+id/center"
                p1:layout_centerVertical="true"
                p1:layout_centerHorizontal="true" />
            <ImageView
                p1:layout_width="310dp"
                p1:layout_height="155dp"
                p1:id="@+id/badgewin_BadgeImageView"
                p1:scaleType="fitStart"
                p1:layout_marginTop="15dp"
                p1:clickable="false"
                p1:layout_centerHorizontal="true"
                p1:layout_alignRight="@+id/BadgeSheetImageView"
                p1:layout_alignLeft="@+id/BadgeSheetImageView"
                p1:layout_marginLeft="-20dp"
                p1:layout_marginRight="-20dp" />
            <ImageView
                p1:layout_width="310dp"
                p1:layout_height="155dp"
                p1:id="@+id/badgewin_BadgeImageViewShadow"
                p1:scaleType="fitStart"
                p1:layout_marginTop="15dp"
                p1:clickable="false"
                p1:layout_centerHorizontal="true"
                p1:layout_alignLeft="@+id/BadgeSheetImageView"
                p1:layout_alignRight="@+id/BadgeSheetImageView"
                p1:layout_marginLeft="-20dp"
                p1:layout_marginRight="-20dp" />
            <TextView
                p1:text="Name of Achievement"
                p1:textAppearance="?android:attr/textAppearanceMedium"
                p1:layout_width="wrap_content"
                p1:layout_height="wrap_content"
                p1:id="@+id/badgewin_badgeTextView"
                p1:layout_marginLeft="40dp"
                p1:textSize="20dp"
                p1:textColor="#ff606060"
                p1:layout_alignLeft="@+id/badgewin_BadgeImageView"
                p1:layout_marginTop="190dp"
                p1:layout_alignRight="@+id/badgewin_BadgeImageView"
                p1:layout_marginRight="40dp" />
            <TextView
                p1:text="Как был получен этот Бейдж:"
                p1:textAppearance="?android:attr/textAppearanceMedium"
                p1:layout_width="wrap_content"
                p1:layout_height="wrap_content"
                p1:id="@+id/badgewin_howwonderTextView"
                p1:textColor="#ff666666"
                p1:textStyle="bold"
                p1:textSize="12dp"
                p1:layout_alignLeft="@id/badgewin_badgeTextView"
                p1:layout_above="@+id/badgewin_wonderdescrTextView"
                p1:layout_marginBottom="10dp" />
            <TextView
                p1:text="descr"
                p1:textAppearance="?android:attr/textAppearanceMedium"
                p1:layout_width="wrap_content"
                p1:layout_height="wrap_content"
                p1:layout_below="@+id/badgewin_detailsTextView"
                p1:id="@+id/badgewin_wonderdescrTextView"
                p1:textColor="#ff6f6f6f"
                p1:textSize="12dp"
                p1:layout_alignLeft="@id/badgewin_howwonderTextView"
                p1:layout_alignRight="@+id/badgewin_BadgeImageView"
                p1:layout_marginRight="40dp"
                p1:textColorLink="#ff26c6e6"
                p1:layout_marginTop="-10dp" />
            <ImageButton
                p1:layout_width="20dp"
                p1:layout_height="20dp"
                p1:layout_alignTop="@id/BadgeSheetImageView"
                p1:layout_alignRight="@id/BadgeSheetImageView"
                p1:id="@+id/badgewin_CloseImageButtonFake"
                p1:scaleType="fitXY"
                p1:background="@drawable/Paper_icon_close_norm"
                p1:layout_margin="3dp" />
            <ImageButton
                p1:layout_width="40dp"
                p1:layout_height="40dp"
                p1:layout_alignTop="@id/BadgeSheetImageView"
                p1:layout_alignRight="@id/BadgeSheetImageView"
                p1:id="@+id/badgewin_CloseImageButton"
                p1:scaleType="fitCenter"
                p1:background="#02ffffff"
                p1:layout_marginTop="-10dp"
                p1:layout_marginRight="-10dp" />
            <TextView
                p1:text="Category, Project"
                p1:textAppearance="?android:attr/textAppearanceSmall"
                p1:layout_width="wrap_content"
                p1:layout_height="wrap_content"
                p1:layout_below="@id/badgewin_badgeTextView"
                p1:id="@+id/badgewin_categ_projectTextView"
                p1:layout_alignLeft="@id/badgewin_badgeTextView"
                p1:layout_marginTop="10dp"
                p1:textColor="#ff606060"
                p1:textSize="12dp" />
            <TextView
                p1:text="Details"
                p1:textAppearance="?android:attr/textAppearanceSmall"
                p1:layout_width="wrap_content"
                p1:layout_height="wrap_content"
                p1:layout_below="@id/badgewin_categ_projectTextView"
                p1:id="@+id/badgewin_detailsTextView"
                p1:layout_alignLeft="@id/badgewin_badgeTextView"
                p1:textColor="#ff606060"
                p1:textSize="12dp"
                p1:layout_alignRight="@+id/badgewin_BadgeImageView"
                p1:layout_marginRight="40dp"
                p1:textColorLink="#ff26c6e6"
                p1:layout_marginBottom="10dp" />
            <LinearLayout
                p1:orientation="vertical"
                p1:minWidth="25px"
                p1:minHeight="100dp"
                p1:layout_width="288dp"
                p1:layout_height="wrap_content"
                p1:id="@+id/bonuspaperlist_linearLayout"
                p1:layout_marginTop="10dp"
                p1:layout_below="@+id/badgewin_wonderdescrTextView"
                p1:background="@drawable/Paper_background_middleMiddle"
                p1:layout_alignLeft="@+id/BadgeSheetImageView"
                p1:layout_alignRight="@+id/BadgeSheetImageView"
                p1:layout_marginLeft="1dp"
                p1:layout_marginRight="2dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>